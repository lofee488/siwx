{
  "name": "siwx",
  "version": "0.1.0",
  "description": "Chain-agnostic authentication library implementing CAIP-122 standard for Sign-In with X (SIWx)",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "siwx",
    "caip-122",
    "siwe",
    "sign-in",
    "authentication",
    "ethereum",
    "solana",
    "bitcoin",
    "blockchain",
    "web3",
    "crypto",
    "eip-4361",
    "bip-322"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lofee488/siwx"
  },
  "bugs": {
    "url": "https://github.com/lofee488/siwx/issues"
  },
  "homepage": "https://github.com/lofee488/siwx#readme",
  "author": "lofee",
  "license": "MIT",
  "dependencies": {
    "viem": "^2.0.0",
    "@noble/ed25519": "^2.0.0",
    "bip322-js": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.0.0"
  }
}
